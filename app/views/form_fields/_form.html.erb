<%= form_for(@form_field) do |f| %>
  <% if @form_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form_field.errors.count, "error") %> prohibited this form_field from being saved:</h2>

      <ul>
      <% @form_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :exist %><br>
    <%= f.check_box :exist %>
  </div>
  <div class="field">
    <%= f.label :type_form_field_id %><br>
    <%= f.select :type_form_field_id, options_for_select(TypeFormField.all.map{|c|[c.name, c.id]}) %>
  </div>
  <div class="field">
    <%= f.label :form_id %><br>
    <%= f.select :form_id, options_for_select(Form.all.map{|c|[c.name, c.id]}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
