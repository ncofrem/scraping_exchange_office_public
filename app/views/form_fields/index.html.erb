<p id="notice"><%= notice %></p>

<h1>Listing Form Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Exist</th>
      <th>Type form field</th>
      <th>Form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_fields.each do |form_field| %>
      <tr>
        <td><%= form_field.name %></td>
        <td><%= form_field.value %></td>
        <td><%= form_field.exist %></td>
        <td><%= form_field.type_form_field.name %></td>
        <td><%= form_field.form.name %></td>
        <td><%= link_to 'Show', form_field %></td>
        <td><%= link_to 'Edit', edit_form_field_path(form_field) %></td>
        <td><%= link_to 'Destroy', form_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

